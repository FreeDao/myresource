<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Themes -->
    <style name="AppTheme" parent="android:Theme.Holo.NoActionBar.Fullscreen">
        <item name="android:progressBarStyleHorizontal">@style/Widget.Tv.ProgressBar</item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.Tv.Small</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.Tv.Medium</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/ic_checkbox</item>
        <item name="android:buttonBarButtonStyle">@style/Widget.Tv.ButtonBarButton</item>
        <item name="android:buttonBarStyle">@style/Pane.ButtonBar</item>
        <item name="android:listViewStyle">@style/Widget.Tv.ListView</item>
        <item name="android:listPopupWindowStyle">@style/Widget.Tv.ListPopupWindow</item>
        <item name="android:popupMenuStyle">@style/Widget.Tv.ListPopupWindow</item>
        <item name="android:dropDownListViewStyle">@style/Widget.Tv.ListView.DropDown</item>
    </style>

    <style name="AppTheme.Dialog" parent="android:Theme.Holo.Dialog.NoActionBar.MinWidth">
        <item name="android:progressBarStyleHorizontal">@style/Widget.Tv.ProgressBar</item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.Tv.Small</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.Tv.Medium</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/ic_checkbox</item>
        <item name="android:buttonBarButtonStyle">@style/Widget.Tv.ButtonBarButton</item>
        <item name="android:buttonBarStyle">@style/Pane.ButtonBar</item>
        <item name="android:listViewStyle">@style/Widget.Tv.ListView</item>
        <item name="android:listPopupWindowStyle">@style/Widget.Tv.ListPopupWindow</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:windowMinWidthMajor">@dimen/pane_width_dialog</item>
        <item name="android:windowMinWidthMinor">@dimen/pane_width_dialog</item>
    </style>

    <style name="AppTheme.Dialog.Alert"  parent="android:Theme.Holo.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@*android:style/DialogWindowTitle.Holo</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <!-- Generic -->
    <style name="Widget.Tv.ProgressBar" parent="android:Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_background</item>
        <item name="android:minHeight">12dip</item>
        <item name="android:maxHeight">12dip</item>
    </style>

    <style name="Widget.Tv.ListView" parent="android:Widget.Holo.ListView">
        <item name="android:divider">@drawable/list_divider</item>
        <item name="android:listSelector">@drawable/item_generic_round_background</item>
    </style>

    <style name="Widget.Tv.ListView.DropDown" parent="Widget.Tv.ListView">
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>

    <style name="Widget.Tv.ListPopupWindow" parent="android:Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/dropdown_background</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="android:dropDownWidth">wrap_content</item>
    </style>

    <style name="TextAppearance.Tv.Small" parent="android:TextAppearance.Holo.Small">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Tv.Medium" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16.5sp</item>
    </style>

    <!-- Tuning -->
    <style name="Widget.Tv.TextView.AtvTuing.Item" parent="android:Widget.Holo.TextView">
        <item name="android:background">@drawable/item_atvtune_background</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:shadowColor">#FB3C3F3B</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@drawable/item_generic_textcolor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.Tv.ImageView.AtvTuing.Item" parent="android:Widget.Holo">
        <item name="android:background">@drawable/item_atvtune_background</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <style name="Widget.Tv.TextView" parent="android:Widget.Holo.TextView">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12.5sp</item>
    </style>

    <style name="Widget.Tv.TextView.Title" parent="Widget.Tv.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/pane_height_dialog_title</item>
        <item name="android:background">@color/background_light</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Tv.TextView.Hint" parent="Widget.Tv.TextView">
        <item name="android:background">@drawable/hint_background</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">9dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="Widget.Tv.ButtonBarButton" parent="android:Widget.Holo.Button">
        <item name="android:background">@drawable/btn_buttonbar_background</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12.5sp</item>
        <item name="android:maxWidth">180dp</item>
        <item name="android:minWidth">90dp</item>
    </style>

    <style name="Widget.Tv.TextView.Message" parent="Widget.Tv.TextView">
        <item name="android:paddingLeft">@dimen/pane_padding</item>
        <item name="android:paddingRight">@dimen/pane_padding</item>
        <item name="android:textColor">#F5F5F5</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minLines">3</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Pane">
        <item name="android:background">@color/background_dark</item>
    </style>

    <style name="Pane.Dialog">
        <item name="android:layout_width">@dimen/pane_width_dialog</item>
        <item name="android:layout_height">@dimen/pane_height_dialog</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="Pane.Info">
        <item name="android:background">@color/background_light</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- TV Informations -->
    <style name="Pane.TvStatus" parent="Pane">
        <item name="android:layout_margin">@dimen/pane_padding_quarter</item>
        <item name="android:padding">@dimen/pane_padding_quarter</item>
    </style>

    <style name="Widget.Tv.TextView.TvInfo" parent="android:Widget.Holo.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Widget.TextView.TvInfo</item>
    </style>

    <style name="Widget.Tv.TextView.TvInfo.Yellow" parent="android:Widget.Holo.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Widget.TextView.TvInfo</item>
        <item name="android:textColor">#F4A800</item>
    </style>

    <style name="TextAppearance.Widget.TextView.TvInfo" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">#F2F2F2</item>
        <item name="android:textSize">12.5sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TV Informations - Program - Time -->
    <style name="Widget.Tv.TextView.TvInfoTime" parent="android:Widget.Holo.TextView">
        <item name="android:background">@color/background_tvinfo_now</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">33sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">1dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Widget.TextView.TvInfoTime.Now</item>
    </style>

    <style name="TextAppearance.Widget.TextView.TvInfoTime" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">9sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Widget.TextView.TvInfoTime.Now" parent="TextAppearance.Widget.TextView.TvInfoTime">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextAppearance.Widget.TextView.TvInfoTime.Next" parent="TextAppearance.Widget.TextView.TvInfoTime">
        <item name="android:textColor">#364F52</item>
    </style>

    <style name="TextAppearance.Widget.TextView.TvInfoTime.Prev" parent="TextAppearance.Widget.TextView.TvInfoTime">
        <item name="android:textColor">#364F52</item>
    </style>

    <style name="Pane.ButtonBar">
        <item name="android:paddingBottom">9dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Widget.Tv.EdiText.Schedule" parent="android:Widget.Holo.EditText">
        <item name="android:cursorVisible">false</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>