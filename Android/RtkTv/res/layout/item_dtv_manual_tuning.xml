<?xml version="1.0" encoding="utf-8"?>
<com.tsb.widget.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingBottom="6dp"
    android:paddingTop="6dp" >

    <LinearLayout
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ic_stat_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_item_stat_new" />

        <ImageView
            android:id="@+id/ic_stat_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_item_stat_favorite" />

        <ImageView
            android:id="@+id/ic_stat_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_item_stat_locked" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_position"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/pane_padding_half"
        android:singleLine="true"
        android:text="@null"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pane_padding_half"
        android:layout_marginRight="@dimen/pane_padding_half"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="@null"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/text_number"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pane_padding_half"
        android:layout_marginRight="@dimen/pane_padding_half"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="@null"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/text_service_id"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pane_padding_half"
        android:layout_marginRight="@dimen/pane_padding_half"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="@null"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/text_frequency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pane_padding_half"
        android:layout_marginRight="@dimen/pane_padding_half"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="@null"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</com.tsb.widget.CheckableLinearLayout>