<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="320dp"
    android:layout_gravity="left|bottom"
    android:layout_margin="@dimen/pane_padding"
    android:background="@color/background_dark"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/text_title"
            style="@style/Widget.Tv.TextView.Title"
            android:text="@string/chlist_name" >
        </TextView>

        <ImageView
            android:id="@+id/button_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_title_arrow_left" />

        <ImageView
            android:id="@+id/button_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_title_arrow_right" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/container_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/pane_padding"
        android:layout_marginLeft="@dimen/pane_padding"
        android:layout_marginRight="@dimen/pane_padding" />

</LinearLayout>