<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/music_fullscreen_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/musicTitle"
            android:layout_width="480dp"
            android:layout_height="24dip"
            android:layout_marginLeft="406dip"
            android:layout_marginTop="152dip"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/musicArtist"
            android:layout_width="480dip"
            android:layout_height="24dip"
            android:layout_marginLeft="406dip"
            android:layout_marginTop="182dip"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_repeat"
            android:layout_width="569dip"
            android:layout_height="20dip"
            android:layout_marginLeft="420dip"
            android:layout_marginTop="234dip"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textColor="@color/musicTitle"
            android:textSize="16sp"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/lay_spectrum"
            android:layout_width="486dip"
            android:layout_height="168dip"
            android:layout_marginLeft="402dip"
            android:layout_marginTop="260dip"
            android:visibility="visible" >

            <com.realtek.Utils.SpectrumView
                android:id="@+id/spectrum"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </com.realtek.Utils.SpectrumView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_text"
            android:layout_width="486dip"
            android:layout_height="160dip"
            android:layout_marginLeft="402dip"
            android:layout_marginTop="430dip"
            android:visibility="visible" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginLeft="0.6dp"
                android:gravity="left|center_vertical"
                android:text="@string/digital_100"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_centerHorizontal="true"
                android:gravity="left|center_vertical"
                android:text="@string/digital_1k"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="0.6dp"
                android:gravity="left|center_vertical"
                android:text="@string/digital_10k"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:gravity="center"
                android:text="@string/spectrum_unit"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_gui"
            android:layout_width="match_parent"
            android:layout_height="130dip"
            android:layout_marginLeft="0dip"
            android:layout_marginTop="516dip"
            android:visibility="invisible" >

            <ImageButton
                android:id="@+id/gui_last"
                android:layout_width="127dp"
                android:layout_height="116dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="312dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/gui_last" />
            <ImageButton
                android:id="@+id/gui_rw"
                android:layout_width="127dp"
                android:layout_height="116dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="444dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/gui_rw" />
            <ImageButton
                android:id="@+id/gui_play"
                android:layout_width="127dp"
                android:layout_height="116dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="576dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/gui_play" />
            <ImageButton
                android:id="@+id/gui_fw"
                android:layout_width="127dp"
                android:layout_height="116dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="708dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/gui_fw" />
           <ImageButton
                android:id="@+id/gui_next"
                android:layout_width="127dp"
                android:layout_height="116dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="840dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/gui_next" />
            <ImageButton
                android:id="@+id/gui_repeat"
                android:layout_width="127dp"
                android:layout_height="116dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="1006dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/gui_repeat" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/lay_banner"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="0dip"
            android:layout_marginTop="670dip"
            android:background="@drawable/music_player_bg_bottom" >

            <TextView
                android:id="@+id/musicNumber"
                android:layout_width="100dip"
                android:layout_height="24dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="154dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imgSta"
                android:layout_width="72dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="244dp"
                android:scaleType="fitCenter"
                android:src="@drawable/au_play" />

            <ProgressBar
                android:id="@+id/playBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="468dip"
                android:layout_height="14dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="322dp"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/myprocess" />

            <TextView
                android:id="@+id/timeNow"
                android:layout_width="190dip"
                android:layout_height="32dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="814dp"
                android:gravity="center"
                android:text="@string/stime"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/btn_repeat"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="1050dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/photo_repeat_all_off" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_quick"
            android:layout_width="500dip"
            android:layout_height="300dip"
            android:layout_marginLeft="100dip"
            android:layout_marginTop="380dip"
            android:background="@color/black"
            android:visibility="gone" >

            <TextView
                android:id="@+id/txtSound"
                android:layout_width="200dip"
                android:layout_height="50dip"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:gravity="left|center_vertical"
                android:text="@string/txtSound"
                android:textColor="@color/timecolor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtRepeat"
                android:layout_width="200dip"
                android:layout_height="50dip"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="60dp"
                android:gravity="left|center_vertical"
                android:text="@string/txtRepeat"
                android:textColor="@color/timecolor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtSleep"
                android:layout_width="200dip"
                android:layout_height="50dip"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="110dp"
                android:gravity="left|center_vertical"
                android:text="@string/txtSleep"
                android:textColor="@color/timecolor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtDevice"
                android:layout_width="200dip"
                android:layout_height="50dip"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="160dp"
                android:gravity="left|center_vertical"
                android:text="@string/txtDevice"
                android:textColor="@color/timecolor"
                android:textSize="16sp"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>