<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:textColor="#FFFFFFFF"
        android:layout_gravity="center_horizontal"
        android:text="@string/add_wifi_net"
        android:textSize="22sp" />

    <RelativeLayout
        android:id="@+id/wifi_add_r1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="20dip"
        android:minHeight="40dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="30dip"
            android:text="@string/net_ssid"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/net_et"
            android:layout_width="300dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dip"
            android:background="@drawable/edit_text_large"
            android:gravity="center"
            android:singleLine="true"
            android:imeOptions="actionDone|flagNoExtractUi|flagNoFullscreen" />
        
    </RelativeLayout>
    
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:layout_marginTop="20dip"
            android:minHeight="40dip"
            android:layout_marginLeft="10dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="30dip"
                android:text="@string/wifi_secure"
                android:textColor="#FFFFFFFF"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/wifi_add_secure_ly"
                android:layout_width="230dip"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="70dip"
                android:minHeight="40dip">

                <ImageView
                    android:id="@+id/secure_left_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/desktop_right"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/wifi_sec_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/left_arrowhead"
                    android:text="@string/wifi_hotspot_secure"
                    android:background="@drawable/one_px"
                    android:gravity="center"
                    android:textColor="#CCCCCCCC"
                    android:textSize="18sp" />
                
                <ImageView
                    android:id="@+id/secure_right_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dip"
                    android:layout_toLeftOf="@id/connect_type"
                    android:background="@drawable/desktop_left"
                    android:visibility="invisible" />
            </RelativeLayout>

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wifi_add_r2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:minHeight="40dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="30dip"
            android:text="@string/net_password"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/code_et"
            android:layout_width="300dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dip"
            android:background="@drawable/edit_text_large"
            android:gravity="center"
            android:password="true"
            android:singleLine="true"
            android:imeOptions="actionDone|flagNoExtractUi|flagNoFullscreen" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wifi_add_r3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:minHeight="40dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="30dip"
            android:text="@string/show_password_1"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/code_show_cb"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dip"
            android:visibility="gone"
            android:button="@drawable/custom_checkbox" />
        
        <CheckBox
            android:id="@+id/code_show_cb_en"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dip"
            android:visibility="gone"
            android:button="@drawable/custom_checkbox_en" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wifi_add_r4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip" >

        <Button
            android:id="@+id/save_net_ok"
            android:layout_width="150dip"
            android:layout_height="60dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dip"
            android:background="@drawable/button_change"
            android:text="@string/save"
            android:textColor="#FFFFFFFF"
            android:textSize="28sp" />

        <Button
            android:id="@+id/save_net_cancel"
            android:layout_width="150dip"
            android:layout_height="60dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="80dip"
            android:background="@drawable/button_change"
            android:text="@string/cancle"
            android:textColor="#FFFFFFFF"
            android:textSize="28sp" />
    </RelativeLayout>

</LinearLayout>