<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="50dip" >

    <TextView
        android:layout_width="200dip"
        android:layout_height="35dip"
        android:paddingLeft="30dip"
        android:text="@string/ip_address"
        android:textColor="#CCCCCCCC"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/ip_four"
        android:layout_width="60dip"
        android:layout_height="35dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dip"
        android:background="@drawable/edit_text"
        android:gravity="center" />

    <EditText
        android:id="@+id/ip_three"
        android:layout_width="60dip"
        android:layout_height="35dip"
        android:layout_marginRight="20dip"
        android:layout_toLeftOf="@id/ip_four"
        android:background="@drawable/edit_text"
        android:gravity="center" />

    <EditText
        android:id="@+id/ip_two"
        android:layout_width="60dip"
        android:layout_height="35dip"
        android:layout_marginRight="20dip"
        android:layout_toLeftOf="@id/ip_three"
        android:background="@drawable/edit_text"
        android:gravity="center" />

    <EditText
        android:id="@+id/ip_one"
        android:layout_width="60dip"
        android:layout_height="35dip"
        android:layout_marginRight="20dip"
        android:layout_toLeftOf="@id/ip_two"
        android:background="@drawable/edit_text"
        android:gravity="center" />

</RelativeLayout>