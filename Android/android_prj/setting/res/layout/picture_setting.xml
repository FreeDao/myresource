        				android:layout_height="wrap_content"
        				android:layout_marginTop="20dp"
        				android:text="标准" 
        				android:layout_gravity="center"/>
			   	     <Button
			   	         android:onClick="clickhandler"
			   	         android:id="@+id/bt_n1"
			   	         android:layout_width="wrap_content"
			   	         android:layout_height="wrap_content"
			   	         android:layout_marginTop="20dp"
			   	         android:text="next" />			   	     			   	     
	   	      </TableRow>
	   	     
	   	      <TableRow>  	
				   	<TextView
