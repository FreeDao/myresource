	        				android:layout_marginTop="20dp" 
	        				android:text="清晰度" />    
	   	     
			   	      <SeekBar
				   		    android:id="@+id/seek_sharpness"
				   		    android:layout_width="400px"
				   		    android:layout_height="wrap_content"
				   		    android:layout_marginTop="20dp" 
