<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     
    <ImageView android:id="@+id/message_bg" 
         android:layout_width="match_parent" 
         android:layout_height="300px"
         android:layout_alignParentLeft="true"
	     android:layout_alignParentTop="true"
         android:background="@drawable/message_box_bg" />

	<RelativeLayout
	    android:id="@+id/confirm_bt"
	    android:layout_width="345px"
	    android:layout_height="52px"
	    android:layout_centerHorizontal="true"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="32px"
	    >
	    
	    <ImageButton
	      	android:id="@+id/comfirm_bt_bg"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:gravity="center"
	        android:background="@drawable/list_common_item_focus" />
	
	    <TextView
	        android:id="@+id/confirm_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:textSize="22px"
	        android:textColor="@color/white"
	        android:text="@string/msg_yes" />
	
	    <ImageView
	        android:id="@+id/confirm_left"
	        android:layout_width="18px"
			android:layout_height="18px"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="12px"
	        android:src="@drawable/list_common_icon_left" />
	
	    <ImageView
	        android:id="@+id/confirm_right"
	        android:layout_width="18px"
			android:layout_height="18px"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="12px"
	        android:src="@drawable/list_common_icon_right" />
	
	</RelativeLayout>
	
	<TextView
	    android:id="@+id/message"
	    android:layout_width="500px"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_above="@+id/confirm_bt"
	    android:layout_marginBottom="15px"
	    android:textColor="#10265f"
	    android:textSize="27px"
	    android:gravity="center"
    />

	<TextView
	    android:id="@+id/confirm_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginLeft="15px"
	    android:layout_marginTop="3px"
	    android:textSize="27px"
	    android:textColor="#0f265f"
	     />
    
 </RelativeLayout>