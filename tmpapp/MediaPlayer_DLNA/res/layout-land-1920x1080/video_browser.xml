<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/videobrowser_mainlayout"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@drawable/dlna_list_bg"    android:orientation="vertical">   	<RelativeLayout        android:layout_width="match_parent"        android:layout_height="match_parent" >      	 <ImageView            android:id="@+id/loadingIcon"            android:layout_width="54px"            android:layout_height="54px"            android:layout_toLeftOf="@+id/btn_menu"            android:layout_marginTop="24px"            android:layout_marginRight="15px"            android:background="#00000000"            android:src="@drawable/others_icons_loading" />       	            	 <RelativeLayout      	     android:id="@+id/grid_view_tmplate"      	     android:layout_width="match_parent"      	     android:layout_height="match_parent"      	     android:layout_marginBottom="30px"      	     android:layout_marginTop="250px" >      	     <RelativeLayout       	         android:id="@+id/grid_view_left_space"      	         android:layout_width="55px"      	         android:layout_height="match_parent"      	         android:layout_alignParentLeft="true"      	         android:layout_alignParentTop="true"      	         ></RelativeLayout>      	     <RelativeLayout      	         android:id="@+id/grid_view_right_space"      	         android:layout_width="21px"      	         android:layout_height="match_parent"      	         android:layout_alignParentRight="true"      	         android:layout_alignParentTop="true"      	         ></RelativeLayout>      	     <GridView	            android:id="@+id/video_list"	            android:layout_toRightOf="@id/grid_view_left_space"	            android:layout_toLeftOf="@id/grid_view_right_space"	            android:layout_alignParentTop="true"	            android:layout_height="match_parent"	            android:layout_width="match_parent"	            android:minHeight="100px"	            android:horizontalSpacing="15px"	            android:verticalSpacing="15px"	            android:numColumns="2"	            android:paddingRight="21px"	            android:scrollbarSize="12px"	            android:scrollbars="vertical"   	            android:scrollbarAlwaysDrawVerticalTrack="true"	            android:fastScrollEnabled="false"	            android:scrollbarTrackVertical="@drawable/dnla_scrollbar_base"	            android:scrollbarThumbVertical="@drawable/dnla_scrollbar_main"	            android:scrollbarStyle="outsideInset"	            android:listSelector="@drawable/videobrowser_listselecter"	            android:longClickable="false"	            android:focusableInTouchMode="false"            />      	 </RelativeLayout>      	 <!-- android:scrollbarThumbVertical="@drawable/scroll_thumb"       		android:scrollbarTrackVertical="@drawable/scroll_track"        		 android:paddingRight="6dp"-->	    <TextView	        android:id="@+id/video_list_icon_video"	        android:layout_width="wrap_content"	        android:layout_height="45px"	        android:layout_marginLeft="133px"	        android:layout_marginTop="90px"	        android:singleLine="true"	        android:includeFontPadding="false"            android:text="@string/mediaplayer"            style="@style/MediaPlayer.Title"/>	    	    <TextView	        android:id="@+id/Top_VideoText"	        android:layout_width="wrap_content"            android:layout_height="45px"        	android:layout_alignTop="@id/video_list_icon_video"        	android:layout_marginLeft="0px"        	android:layout_toRightOf="@+id/video_list_icon_video"			android:singleLine="true"			android:includeFontPadding="false"            android:text="@string/title_movie"            style="@style/MediaPlayer.Title" 		/>	    	    <ImageView            android:id="@+id/top_cloud"            android:layout_marginTop="68px"            android:layout_width="86px"            android:layout_height="64px"            android:layout_marginLeft="37px"            android:scaleType="fitXY"            android:src="@drawable/dlna_icon" />	    	    <ImageView	        android:id="@+id/video_list_icon_folder"	        android:layout_width="40px"	        android:layout_height="40px"	        android:layout_marginLeft="64px"	        android:layout_marginTop="172px"	        android:scaleType="fitXY"	        android:src="@drawable/dnla_folder_icon_s" />	    	    <TextView	        android:id="@+id/video_path_top"	        android:layout_width="1050px"	        android:layout_height="33px"	        android:layout_marginLeft="110px"            android:layout_marginTop="180px"            android:includeFontPadding="false"	        android:ellipsize="end"            android:shadowColor="#aaaaaa"            android:singleLine="true"            android:textColor="#ffffff"            android:textSize="24px"        />	    <RelativeLayout            android:id="@+id/lay_up"            android:layout_width="180px"            android:layout_height="60px"            android:layout_alignParentRight="true"            android:layout_marginRight="60px"            android:layout_marginTop="170px">            <ImageView                android:id="@+id/sortup_bg"                android:src="@drawable/dnla_sorting_base_down"                 android:layout_width="wrap_content"                android:layout_height="wrap_content" />                        <ImageView                android:id="@+id/sortup"                android:layout_alignRight="@id/sortup_bg"                android:src="@drawable/dnla_sorting_icon_down"         		android:layout_centerVertical="true"                 android:layout_width="30px"                android:layout_height="30px" />                        <TextView                android:id="@+id/txt_sortup"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignLeft="@id/sortup_bg"                android:layout_centerVertical="true"                android:layout_marginLeft="15px"                android:ellipsize="end"                android:shadowColor="#aaaaaa"                android:singleLine="true"                android:text="@string/date"                android:textColor="#ffffff"                android:textSize="20px" />        </RelativeLayout>        	    	    <RelativeLayout            android:id="@+id/lay_down"            android:layout_height="60px"            android:layout_width="180px"            android:layout_toLeftOf="@id/lay_up"            android:layout_marginRight="10px"            android:layout_marginTop="170px" >            <ImageView                android:id="@+id/sortdown_bg"                android:src="@drawable/dnla_sorting_base_down"                 android:layout_width="wrap_content"                android:layout_height="wrap_content" />            <ImageView                android:id="@+id/sortdown"                android:layout_alignRight="@id/sortdown_bg"                android:src="@drawable/dnla_sorting_icon_down"         		android:layout_centerVertical="true"                android:layout_width="30px"                android:layout_height="30px" />            <TextView                android:id="@+id/txt_sortdown"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignLeft="@id/sortdown_bg"                android:layout_centerVertical="true"                android:layout_marginLeft="15px"                android:ellipsize="end"                android:shadowColor="#aaaaaa"                android:singleLine="true"                android:text="@string/name"                android:textColor="#ffffff"                android:textSize="20px" />        </RelativeLayout>	    		<ImageView        	android:id="@+id/btn_menu"        	android:layout_width="wrap_content"        	android:layout_height="wrap_content"        	android:layout_alignParentRight="true"        	android:layout_alignParentTop="true"        	android:layout_marginRight="20px"        	android:layout_marginTop="24px"        	android:visibility="invisible"        	android:src="@drawable/dlna_media_menu_icon" />    </RelativeLayout></LinearLayout>