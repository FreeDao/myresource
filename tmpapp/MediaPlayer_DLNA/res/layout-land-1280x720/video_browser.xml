<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/videobrowser_mainlayout"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@drawable/dlna_list_bg"    android:orientation="vertical">   	<RelativeLayout        android:layout_width="match_parent"        android:layout_height="match_parent" >      	 <ImageView            android:id="@+id/loadingIcon"            android:layout_width="36px"            android:layout_height="36px"            android:layout_toLeftOf="@+id/btn_menu"            android:layout_marginTop="16px"            android:layout_marginRight="10px"            android:background="#00000000"            android:src="@drawable/others_icons_loading" />       	            	 <RelativeLayout      	     android:id="@+id/grid_view_tmplate"      	     android:layout_width="match_parent"      	     android:layout_height="match_parent"      	     android:layout_marginBottom="20px"      	     android:layout_marginTop="166px" >      	     <RelativeLayout       	         android:id="@+id/grid_view_left_space"      	         android:layout_width="37px"      	         android:layout_height="match_parent"      	         android:layout_alignParentLeft="true"      	         android:layout_alignParentTop="true"      	         ></RelativeLayout>      	     <RelativeLayout      	         android:id="@+id/grid_view_right_space"      	         android:layout_width="14px"      	         android:layout_height="match_parent"      	         android:layout_alignParentRight="true"      	         android:layout_alignParentTop="true"      	         ></RelativeLayout>      	     <GridView	            android:id="@+id/video_list"	            android:layout_toRightOf="@id/grid_view_left_space"	            android:layout_toLeftOf="@id/grid_view_right_space"	            android:layout_alignParentTop="true"	            android:layout_height="match_parent"	            android:layout_width="match_parent"	            android:minHeight="66px"	            android:horizontalSpacing="10px"	            android:verticalSpacing="10px"	            android:numColumns="2"	            android:paddingRight="14px"	            android:scrollbarSize="8px"	            android:scrollbars="vertical"   	            android:scrollbarAlwaysDrawVerticalTrack="true"	            android:fastScrollEnabled="false"	            android:scrollbarTrackVertical="@drawable/dnla_scrollbar_base"	            android:scrollbarThumbVertical="@drawable/dnla_scrollbar_main"	            android:scrollbarStyle="outsideInset"	            android:listSelector="@drawable/videobrowser_listselecter"	            android:longClickable="false"	            android:focusableInTouchMode="false"            />      	 </RelativeLayout>      	 <!-- android:scrollbarThumbVertical="@drawable/scroll_thumb"       		android:scrollbarTrackVertical="@drawable/scroll_track"        		 android:paddingRight="6dp"-->	    <TextView	        android:id="@+id/video_list_icon_video"	        android:layout_width="wrap_content"	        android:layout_height="30px"	        android:layout_marginLeft="88px"	        android:layout_marginTop="60px"	        android:singleLine="true"	        android:includeFontPadding="false"            android:text="@string/mediaplayer"            style="@style/MediaPlayer.Title.720p"/>	    	    <TextView	        android:id="@+id/Top_VideoText"	        android:layout_width="wrap_content"            android:layout_height="30px"        	android:layout_alignTop="@id/video_list_icon_video"        	android:layout_marginLeft="0px"        	android:layout_toRightOf="@+id/video_list_icon_video"			android:singleLine="true"			android:includeFontPadding="false"            android:text="@string/title_movie"            style="@style/MediaPlayer.Title.720p" 		/>	    	    <ImageView            android:id="@+id/top_cloud"            android:layout_marginTop="45px"            android:layout_width="57px"            android:layout_height="43px"            android:layout_marginLeft="25px"            android:scaleType="fitXY"            android:src="@drawable/dlna_icon" />	    	    <ImageView	        android:id="@+id/video_list_icon_folder"	        android:layout_width="26px"	        android:layout_height="26px"	        android:layout_marginLeft="43px"	        android:layout_marginTop="114px"	        android:scaleType="fitXY"	        android:src="@drawable/dnla_folder_icon_s" />	    	    <TextView	        android:id="@+id/video_path_top"	        android:layout_width="700px"	        android:layout_height="22px"	        android:layout_marginLeft="73px"            android:layout_marginTop="120px"            android:includeFontPadding="false"	        android:ellipsize="end"            android:shadowColor="#aaaaaa"            android:singleLine="true"            android:textColor="#ffffff"            android:textSize="16px"        />	    <RelativeLayout            android:id="@+id/lay_up"            android:layout_width="120px"            android:layout_height="40px"            android:layout_alignParentRight="true"            android:layout_marginRight="40px"            android:layout_marginTop="113px">            <ImageView                android:id="@+id/sortup_bg"                android:src="@drawable/dnla_sorting_base_down"                 android:layout_width="wrap_content"                android:layout_height="wrap_content" />                        <ImageView                android:id="@+id/sortup"                android:layout_alignRight="@id/sortup_bg"                android:src="@drawable/dnla_sorting_icon_down"         		android:layout_centerVertical="true"                 android:layout_width="20px"                android:layout_height="20px" />                        <TextView                android:id="@+id/txt_sortup"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignLeft="@id/sortup_bg"                android:layout_centerVertical="true"                android:layout_marginLeft="10px"                android:ellipsize="end"                android:shadowColor="#aaaaaa"                android:singleLine="true"                android:text="@string/date"                android:textColor="#ffffff"                android:textSize="13px" />        </RelativeLayout>        	    	    <RelativeLayout            android:id="@+id/lay_down"            android:layout_height="40px"            android:layout_width="120px"            android:layout_toLeftOf="@id/lay_up"            android:layout_marginRight="7px"            android:layout_marginTop="113px" >            <ImageView                android:id="@+id/sortdown_bg"                android:src="@drawable/dnla_sorting_base_down"                 android:layout_width="wrap_content"                android:layout_height="wrap_content" />            <ImageView                android:id="@+id/sortdown"                android:layout_alignRight="@id/sortdown_bg"                android:src="@drawable/dnla_sorting_icon_down"         		android:layout_centerVertical="true"                android:layout_width="20px"                android:layout_height="20px" />            <TextView                android:id="@+id/txt_sortdown"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignLeft="@id/sortdown_bg"                android:layout_centerVertical="true"                android:layout_marginLeft="10px"                android:ellipsize="end"                android:shadowColor="#aaaaaa"                android:singleLine="true"                android:text="@string/name"                android:textColor="#ffffff"                android:textSize="13px" />        </RelativeLayout>	    		<ImageView        	android:id="@+id/btn_menu"        	android:layout_width="wrap_content"        	android:layout_height="wrap_content"        	android:layout_alignParentRight="true"        	android:layout_alignParentTop="true"        	android:layout_marginRight="13px"        	android:layout_marginTop="16px"        	android:visibility="invisible"        	android:src="@drawable/dlna_media_menu_icon" />    </RelativeLayout></LinearLayout>