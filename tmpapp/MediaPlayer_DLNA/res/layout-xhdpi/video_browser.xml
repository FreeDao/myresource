<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/videobrowser_mainlayout"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@drawable/background_horizontal"    android:orientation="vertical"     >    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="match_parent" >      	 <ImageView            android:id="@+id/loadingIcon"            android:layout_width="27dp"            android:layout_height="27dp"            android:layout_alignParentRight="true"        	android:layout_alignParentTop="true"        	android:layout_marginRight="50dp"        	android:layout_marginTop="35dp"            android:background="#00000000"            android:src="@drawable/others_icons_loading" />       	       	 <GridView            android:id="@+id/video_list"            android:layout_width="470dp"            android:layout_height="match_parent"			android:layout_marginLeft="45dp"            android:layout_marginTop="125dp"            android:layout_marginBottom="25dp"            android:horizontalSpacing="@dimen/landscape_list_horizontalSpacing"            android:verticalSpacing="@dimen/landscape_list_verticalSpacing"            android:numColumns="1"            android:paddingRight="10dp"            android:scrollbarSize="10dp"            android:scrollbars="vertical"               android:scrollbarAlwaysDrawVerticalTrack="true"            android:fastScrollEnabled="false"            android:scrollbarTrackVertical="@drawable/scroll_track"            android:scrollbarThumbVertical="@drawable/scroll_thumb"            android:scrollbarStyle="outsideInset"            android:listSelector="@drawable/videobrowser_listselecter"            android:longClickable="false"            android:focusableInTouchMode="false"             />      	 <!-- android:scrollbarThumbVertical="@drawable/scroll_thumb"       		android:scrollbarTrackVertical="@drawable/scroll_track"        		 android:paddingRight="6dp"-->	    <TextView	        android:id="@+id/video_list_icon_video"	        android:layout_width="wrap_content"	        android:layout_height="wrap_content"	        android:layout_marginLeft="20dp"	        android:layout_marginTop="50dp"	        android:singleLine="true"            android:text="@string/mediaplayer"            android:textColor="#ffffff"            android:textSize="20.25sp"/>	    	    <ImageView	        android:id="@+id/video_list_icon_folder"	        android:layout_width="wrap_content"	        android:layout_height="wrap_content"	        android:layout_marginLeft="30dp"	        android:layout_marginTop="83dp"	        android:scaleType="fitXY"	        android:src="@drawable/list_common_icon_folder" />	    	    <TextView	        android:id="@+id/Top_VideoText"	        android:layout_width="wrap_content"            android:layout_height="wrap_content"        	android:layout_alignTop="@+id/video_list_icon_video"        	android:layout_marginLeft="11.25dp"        	android:layout_toRightOf="@+id/video_list_icon_video"			android:singleLine="true"            android:text="@string/title_movie"            android:textColor="#ffffff"            android:textSize="20.25sp" 		/>	    	    <TextView	        android:id="@+id/video_path_top"	        android:layout_width="230dp"	        android:layout_height="22.5dp"	        android:layout_toRightOf="@id/video_list_icon_folder"	        android:layout_alignTop="@id/video_list_icon_folder"	        android:layout_marginLeft="8dp"	        android:layout_marginTop="4dp"	        android:ellipsize="end"            android:shadowColor="#aaaaaa"            android:singleLine="true"            android:textColor="#ffffff"            android:textSize="15sp"/>	    <RelativeLayout            android:id="@+id/lay_up"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignRight="@id/video_list"            android:layout_marginRight="20dp"            android:layout_marginTop="83dp">            <ImageView                android:id="@+id/sortup_bg"                android:src="@drawable/dnla_sorting_base_up"                 android:layout_width="wrap_content"                android:layout_height="wrap_content" />            <ImageView                android:id="@+id/sortup"                android:layout_alignRight="@id/sortup_bg"                android:src="@drawable/dnla_sorting_icon_up"         		android:layout_centerVertical="true"                 android:layout_width="wrap_content"                android:layout_height="wrap_content" />            <TextView                android:id="@+id/txt_sortup"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignLeft="@id/sortup_bg"                android:layout_centerVertical="true"                android:layout_marginLeft="10dp"                android:ellipsize="end"                android:shadowColor="#aaaaaa"                android:singleLine="true"                android:text="@string/sort_up"                android:textColor="#ffffff"                android:textSize="9sp" />        </RelativeLayout>        	    	    <RelativeLayout            android:id="@+id/lay_down"            android:layout_height="wrap_content"            android:layout_width="wrap_content"            android:layout_toLeftOf="@id/lay_up"            android:layout_marginRight="10dp"            android:layout_marginTop="83dp" >            <ImageView                android:id="@+id/sortdown_bg"                android:src="@drawable/dnla_sorting_base_down"                 android:layout_width="wrap_content"                android:layout_height="wrap_content" />            <ImageView                android:id="@+id/sortdown"                android:layout_alignRight="@id/sortdown_bg"                android:src="@drawable/dnla_sorting_icon_down"         		android:layout_centerVertical="true"                android:layout_width="wrap_content"                android:layout_height="wrap_content" />            <TextView                android:id="@+id/txt_sortdown"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignLeft="@id/sortdown_bg"                android:layout_centerVertical="true"                android:layout_marginLeft="10dp"                android:ellipsize="end"                android:shadowColor="#aaaaaa"                android:singleLine="true"                android:text="@string/sort_down"                android:textColor="#ffffff"                android:textSize="9sp" />        </RelativeLayout>	    		<ImageView        	android:id="@+id/btn_menu"        	android:layout_width="wrap_content"        	android:layout_height="wrap_content"        	android:layout_alignParentRight="true"        	android:layout_alignParentTop="true"        	android:layout_marginRight="10dp"        	android:layout_marginTop="35dp"        	android:src="@drawable/dlna_media_menu_icon" />    </RelativeLayout></LinearLayout>