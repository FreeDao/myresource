<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:background="@drawable/list_common_bg"    android:id="@+id/main"    tools:context=".VideoBrowser" >        <RelativeLayout        android:layout_width="match_parent"        android:layout_height="match_parent" >	    <ImageView	        android:id="@+id/loadingIcon"	        android:layout_width="27dp"	        android:layout_height="27dp"	        android:layout_marginLeft="904.5dp"	        android:layout_marginTop="27dp"	        android:src="@drawable/others_icons_loading" />	    <ImageView	        android:id="@+id/video_list_icon_video"	        android:layout_width="wrap_content"	        android:layout_height="wrap_content"	        android:layout_marginLeft="16.5dp"	        android:layout_marginTop="14.25dp"	        android:src="@drawable/video_list_icon_video1" />	    <TextView	        android:id="@+id/Top_VideoText"	        android:layout_toRightOf="@+id/video_list_icon_video"        	android:layout_alignTop="@+id/video_list_icon_video"        	android:layout_marginTop="4.5dp"        	android:layout_marginLeft="11.25dp"	        android:layout_width="wrap_content"            android:layout_height="28.5dp"	        android:text="@string/title_movie"	        android:textColor="#0f265f"	        android:textSize="22.5dp" />	    <ImageView	        android:id="@+id/video_list_icon_line"	        android:layout_width="510dp"	        android:layout_height="wrap_content"	        android:layout_marginLeft="67.5dp"	        android:layout_marginTop="86.25dp"	        android:src="@drawable/list_common_icon_line" />	    <ImageView	        android:id="@+id/video_list_icon_folder"	        android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginLeft="537dp"            android:layout_marginTop="63.75dp"            android:scaleType="fitXY"	        android:src="@drawable/list_common_icon_folder" />	    <TextView	        android:id="@+id/video_path_top"	        android:layout_width="360dp"	        android:layout_height="22.5dp"	        android:layout_toLeftOf="@+id/video_list_icon_folder"	        android:layout_marginLeft="2dp"	        android:layout_marginTop="63.75dp"	        android:gravity="right"	        android:shadowColor="#aaaaaa"	        android:singleLine="true"	        android:textColor="#0f265f"	        android:textSize="15sp"/>	    <TextView	        android:id="@+id/video_list_total_time_top"            android:layout_width="175dp"            android:layout_height="22.5dp"            android:layout_marginLeft="80dp"            android:layout_marginTop="61.5dp"            android:gravity="left"            android:shadowColor="#aaaaaa"            android:singleLine="true"            android:text="@string/totaltime"            android:textColor="#0f265f"            android:textSize="15sp"/>	    <TextView	        android:id="@+id/video_list_index_info"	        android:layout_width="90dp"	        android:layout_height="22.5dp"	        android:layout_marginLeft="600dp"	        android:layout_marginTop="63.75dp"	        android:gravity="left"	        android:shadowColor="#aaaaaa"	        android:textColor="#0f265f"	        android:textSize="15sp"/>	    <ListView	        android:id="@+id/video_list"	        android:layout_width="502.5dp"	        android:layout_height="415.5dp"	        android:layout_marginLeft="67.5dp"	        android:layout_marginTop="90dp"	        android:divider="@color/ListViewDivideLine"	        android:dividerHeight="0.5025dp"	        android:focusable="true"            android:focusableInTouchMode="true"	        android:listSelector="@drawable/selector_list_background"	        android:scrollbars="none" />    </RelativeLayout>    </LinearLayout>