<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
	<com.realtek.dmr.PictureSurfaceView
	    android:id="@+id/picture_focused"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	>
	</com.realtek.dmr.PictureSurfaceView>
	<ProgressBar
                android:id="@+id/loading"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:max="100"
                android:maxHeight="60dp"
                android:maxWidth="60dp"
                android:minHeight="60dp"
                android:minWidth="60dp" />
	 <ImageView
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="26.6dp"
            android:layout_marginTop="26.6dp"
            android:src="@drawable/dlna_media_menu_icon" />
	 
	<RelativeLayout 
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="93.3dp"  
        android:id="@+id/controlbar_photoplayer"
        android:paddingLeft="26.6dp"
        android:paddingTop="13.3dp"
        android:paddingBottom="13.3dp"
        android:background="@drawable/guide_bar"
	    >
	    <RelativeLayout 
	        android:layout_width="160dp"
	        android:layout_height="match_parent"
	     	android:id="@+id/bar_buttons"
	        >

	        
	    </RelativeLayout>
	    <RelativeLayout 
	        android:layout_toRightOf="@+id/bar_buttons"
	        android:layout_marginLeft="73.3dp"
	        android:layout_width="666.7dp"
	        android:layout_height="match_parent"
	        android:id="@+id/bar_gallery"
	        >
			<HorizontalScrollView 
			    android:id="@+id/gallery"
			    android:layout_alignParentBottom="true"
			    android:layout_alignParentLeft="true"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		         android:scrollbars="none"
		        
		        >
		        <LinearLayout 
		            android:orientation="horizontal"
		            android:id="@+id/item_gallery"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            >
		            
		            
		            <ImageView
		                android:id="@+id/img_content"
		                android:layout_width="match_parent"
		                android:layout_height="match_parent"
		                >
		            </ImageView>
		        </LinearLayout>
		    </HorizontalScrollView>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:layout_alignParentRight="true"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:id="@+id/control_info"
	        >
			<ImageButton
			    android:layout_centerVertical="true"
	            android:layout_marginRight="26.6dp"
	            android:layout_toLeftOf="@+id/rotate_btn"
	            android:id="@+id/info_zoom"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:scaleType="center"
	            />
	        <ImageButton
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="26.6dp"
	            android:id="@+id/rotate_btn"
	            android:layout_width="66.7dp"
	            android:layout_height="66.7dp"
	            />
			
	    </RelativeLayout>
	</RelativeLayout>    
	
</RelativeLayout>