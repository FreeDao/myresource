<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:orientation="horizontal">
	<TextView
	    android:id="@+id/menu_name"
	    android:layout_width="150dp"
        android:layout_height="52px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical|left"
	    android:text="@string/quickmenu"
	    android:textColor="@color/white" 
	    android:textSize="28px"
		/>
	<!-- android:layout_marginTop="3dp" -->
	
	<RelativeLayout 
	    android:id="@+id/item_right_rl"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginRight="60dp"
	    android:layout_width="400px"
        android:layout_height="match_parent"
        android:gravity="center"
	    >

		<ImageView
		    android:id="@+id/left_arrow"
		    android:layout_width="14dp"
	        android:layout_height="14dp"
	        android:layout_marginLeft="30px"	        
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="9dp"
		    android:src="@drawable/list_common_icon_left"
		    android:visibility="invisible" />
	
		<TextView
		    android:id="@+id/menu_option"
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="4dp"
	        android:layout_centerVertical="true"
			android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"

	        android:singleLine="true"
			android:textColor="@color/white" 
			android:textSize="28px"/>
		
		
		<ImageView
		    android:id="@+id/right_arrow"
		    android:layout_width="16dp"
	        android:layout_height="16dp"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="30px"
	        android:layout_alignTop="@+id/left_arrow"
		    android:src="@drawable/list_common_icon_right"
		    android:visibility="invisible" />
	</RelativeLayout>
