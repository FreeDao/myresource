<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@drawable/image_bw_thumb_bg"
    tools:context=".GridViewActivity" >
     
    <RelativeLayout
	            android:id="@+id/bg_bottom"
	            android:layout_width="1280dp"
	            android:layout_height="46dp"
	            android:layout_marginLeft="0dp"
	            android:layout_marginTop="674dp"
	            android:background="@drawable/list_common_bg_bottom">
	        <TextView
	            android:id="@+id/guide_ok"
	            android:layout_width="46dp"
	            android:layout_height="28dp"
	            android:layout_toLeftOf="@+id/guide_enter"
	            android:layout_marginRight="10dp"
	            android:layout_marginTop="9dp"
	            android:background="@drawable/guide_icon_bg"
	            android:gravity="center"
	            android:text="@string/guide_ok"
	            android:textColor="@color/white" />
	        <TextView
	            android:id="@+id/guide_enter"
	            android:layout_width="wrap_content"
	            android:layout_height="28dp"
	            android:layout_toLeftOf="@+id/guide_quick"
	            android:layout_marginRight="20dp"
	            android:layout_marginTop="9dp"
	            android:gravity="center"
	            android:textColor="#0f265f"
	            android:text="@string/guide_enter" />
	        <TextView
	            android:id="@+id/guide_quick"
	            android:layout_width="70dp"
	            android:layout_height="28dp"
	            android:layout_toLeftOf="@+id/photobrowser_invisiable_center"
	            android:layout_marginRight="5dp"
	            android:layout_marginTop="9dp"
	            android:background="@drawable/guide_icon_bg"
	            android:gravity="center"
	            android:text="@string/guide_quick"
	            android:textColor="@color/white" />
	        <TextView 
	        	android:id="@+id/photobrowser_invisiable_center"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingTop="5dp"
	            android:layout_centerHorizontal="true"
	            android:layout_marginTop="9dp"
	            android:textSize="15sp"          
	            />
	        <TextView
	            android:id="@+id/guide_features"
	            android:layout_width="wrap_content"
	            android:layout_height="28dp"
	            android:layout_toRightOf="@+id/photobrowser_invisiable_center"
	            android:layout_marginLeft="5dp"
	            android:layout_marginTop="9dp"
	            android:gravity="center"
	            android:textColor="#0f265f"
	            android:text="@string/guide_features" />
	        <TextView
	            android:id="@+id/guide_p"
	            android:layout_width="28dp"
	            android:layout_height="28dp"
	            android:layout_toRightOf="@+id/guide_features"
	            android:layout_marginLeft="20dp"
	            android:layout_marginTop="9dp"	            
	            android:background="@drawable/guide_icon_bg"
	            android:gravity="center"
	            android:text="@string/guide_p"
	            android:textColor="@color/white" />
	        <TextView
	            android:id="@+id/guide_page"
	            android:layout_width="wrap_content"
	            android:layout_height="28dp"
	            android:layout_toRightOf="@+id/guide_p"
	            android:layout_marginLeft="10dp"
	            android:layout_marginTop="9dp"
	            android:gravity="center"
	            android:textColor="#0f265f"
	            android:text="@string/guide_page" />
	    </RelativeLayout> 
    
    
	<ImageView
        android:id="@+id/topMediaIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="22dp"
        android:layout_width="wrap_content"        
        android:layout_height="wrap_content"        
        android:src="@drawable/photo_list_icon_photo" />
	
	
	<TextView
        android:id="@+id/topMediaInfo"
        android:layout_toRightOf="@+id/topMediaIcon"
        android:layout_alignTop="@+id/topMediaIcon"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:singleLine="true"
        android:text="@string/title_photo"
        android:textColor="#102860"
        android:textSize="27sp" 
        />
	
	
	<ImageView
        android:id="@+id/topLoadingIcon"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="62dp"
        android:layout_marginTop="27dp"
        android:layout_width="30dp"        
        android:layout_height="30dp" 
  
        android:src="@drawable/others_icons_loading"/>
	<LinearLayout 
	    android:id="@+id/ll_above_gv"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="84dp"
		android:layout_marginTop="79dp"
	    android:orientation="vertical"
	    android:layout_width="667dp"
	    android:layout_height="33dp"
	    
	    >
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="31dp"
	        android:orientation="horizontal"
	        >
	        <ImageView
		        android:id="@+id/topFolderIcon"
		        android:layout_width="33dp"        
		        android:layout_height="28dp"    
		        android:layout_gravity="left"
		        android:src="@drawable/list_common_icon_folder" />
 		
			<TextView
		        android:id="@+id/topMeidiaPathInfo"
		        android:layout_width="480dp"
		        android:layout_height="wrap_content"
		        android:textColor="#102860"
		        android:textSize="19sp" 
		        android:singleLine="true"/>

			
	        
	    </LinearLayout>
	    <ImageView 
	        android:layout_width="match_parent"
	        android:layout_height="2dp"
	        android:src="@drawable/list_common_icon_line"
	        
	        
	        
	        />
	    
	    
	    
	    
	</LinearLayout>
 
	
	
