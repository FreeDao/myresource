<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45px"
    android:orientation="horizontal"
    >
	
	<TextView
	    android:id="@+id/menu_name"
	    android:layout_width="120px"
        android:layout_height="45px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12px"
        android:gravity="center_vertical|left"
	    android:text="@string/quickmenu"
	    android:textColor="@drawable/video_list_text_color" 
	    android:textSize="24px"
	    android:singleLine="true"
	/>
	
	<RelativeLayout 
	    android:id="@+id/item_right_rl"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/menu_name"
	    android:layout_marginLeft="60px"
        android:gravity="center"
	    >

		<ImageView
		    android:id="@+id/left_arrow"
		    android:layout_width="16px"
	        android:layout_height="16px"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="22px"
	        android:layout_marginTop="9px"
		    android:src="@drawable/list_common_icon_left"
		    android:visibility="invisible" />
	
		<TextView
		    android:id="@+id/menu_option"
		    android:layout_width="wrap_content"
	        android:layout_height="45px"
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="6px"
	        android:layout_centerVertical="true"
			android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
	        android:singleLine="true"
			android:textColor="@drawable/video_list_text_color" 
			android:textSize="24px"				
			/>
		
		<ImageView
		    android:id="@+id/right_arrow"
		    android:layout_width="16px"
	        android:layout_height="16px"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="22px"
	        android:layout_alignTop="@+id/left_arrow"
		    android:src="@drawable/list_common_icon_right"
		    android:visibility="invisible" />
	</RelativeLayout>
</RelativeLayout>