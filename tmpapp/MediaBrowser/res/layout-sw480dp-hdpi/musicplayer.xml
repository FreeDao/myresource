<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/music_fullscreen_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/musicTitle"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270.67dip"
            android:layout_marginTop="101.33dip"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="13.333sp" />

        <TextView
            android:id="@+id/musicArtist"
            android:layout_width="320dip"
            android:layout_height="wrap_content"
            android:layout_below="@id/musicTitle"
            android:layout_marginLeft="270.67dip"
            android:layout_marginTop="5.333dp"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="13.333sp" />

        <TextView
            android:id="@+id/txt_repeat"
            android:layout_width="379.333dip"
            android:layout_height="13.333dip"
            android:layout_marginLeft="280dip"
            android:layout_marginTop="156dip"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textColor="@color/musicTitle"
            android:textSize="11sp"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/lay_spectrum"
            android:layout_width="324dip"
            android:layout_height="112dip"
            android:layout_marginLeft="268dip"
            android:layout_marginTop="173.33dip"
            android:visibility="visible" >

            <com.realtek.Utils.SpectrumView
                android:id="@+id/spectrum"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </com.realtek.Utils.SpectrumView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_text"
            android:layout_width="324dip"
            android:layout_height="106.67dip"
            android:layout_marginLeft="268dip"
            android:layout_marginTop="286.67dip"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="20.44dp"
                android:layout_height="17.33dp"
                android:layout_marginLeft="0.5dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="9dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="20.44dp"
                android:layout_height="17.33dp"
                android:layout_marginLeft="150.667dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="8dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="20.44dp"
                android:layout_height="17.33dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:gravity="left|center_vertical"
                android:textColor="#ffffff"
                android:textSize="8dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="17.33dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18.667dp"
                android:gravity="center"
                android:text="@string/spectrum_unit"
                android:textColor="#ffffff"
                android:textSize="11dp"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_gui"
            android:layout_width="match_parent"
            android:layout_height="86.67dip"
            android:layout_marginLeft="0dip"
            android:layout_marginTop="344dip"
            android:visibility="invisible" >

            <ImageButton
                android:id="@+id/gui_last"
                android:layout_width="84.67dp"
                android:layout_height="77.33dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="185dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/gui_last" />
            <ImageButton
                android:id="@+id/gui_rw"
                android:layout_width="84.67dp"
                android:layout_height="77.33dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="296dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/gui_rw" />
            <ImageButton
                android:id="@+id/gui_play"
                android:layout_width="84.67dp"
                android:layout_height="77.33dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="384dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/gui_play" />
            <ImageButton
                android:id="@+id/gui_fw"
                android:layout_width="84.67dp"
                android:layout_height="77.33dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="472dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/gui_fw" />
           <ImageButton
                android:id="@+id/gui_next"
                android:layout_width="84.67dp"
                android:layout_height="77.33dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="560dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/gui_next" />
            <ImageButton
                android:id="@+id/gui_repeat"
                android:layout_width="84.67dp"
                android:layout_height="77.33dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="670.67dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/gui_repeat" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/lay_banner"
            android:layout_width="match_parent"
            android:layout_height="33.33dip"
            android:layout_marginLeft="0dip"
            android:layout_marginTop="446.67dip"
            android:background="@drawable/photo_banner" >

            <TextView
                android:id="@+id/musicNumber"
                android:layout_width="66.67dip"
                android:layout_height="16dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="102.67dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/imgSta"
                android:layout_width="48dp"
                android:layout_height="14.67dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="162.67dp"
                android:scaleType="fitCenter"
                android:src="@drawable/au_play" />

            <ProgressBar
                android:id="@+id/playBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="312dip"
                android:layout_height="9.33dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="214.67dp"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/myprocess" />

            <TextView
                android:id="@+id/timeNow"
                android:layout_width="126.67dip"
                android:layout_height="21.33dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="542.67dp"
                android:gravity="center"
                android:text="@string/stime"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <ImageButton
                android:id="@+id/btn_repeat"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="700dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/photo_repeat_all_off" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>