<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_mbw_menu_bg"
    android:orientation="horizontal" >
  
    <ImageView
        android:id="@+id/mb_background"
        android:layout_width="585dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="187.5dp"
        android:layout_marginTop="202.5dp"
        android:scaleType="fitXY"
        android:src="@drawable/select_icon_bg" 
		android:visibility="invisible"/>

    <LinearLayout	        
		android:layout_width="600dp"
		android:layout_height="170dp"			    
		android:layout_marginLeft="180dp"
		android:layout_marginTop="185dp"
		android:id="@+id/mb_linearlayout"
		android:orientation="horizontal">	   
		  		
		<RelativeLayout 
		    	android:layout_width="150dp"
	    		android:layout_height="170dp"  		
	    		>	    	
		    <ImageButton 
	   		android:id="@+id/mb_photo_img"   	
	    	android:layout_width="150dp"
	    	android:layout_height="140dp"	    	
	    	android:src="@drawable/select_icon_photo_focus"
	    	android:scaleType="fitCenter"
	    	android:background="@drawable/btn_bk"/>
		    <TextView 
		    android:layout_marginLeft="0dp"
		    android:layout_marginTop="132dp"
	    	android:layout_width="fill_parent"
	    	android:layout_height="20dp"
	    	android:textColor="#000000"
	    	android:gravity="center"
	    	android:textSize="16dp"
	    	android:text="@string/title_photo"/>
		</RelativeLayout>
		
		<RelativeLayout 
		    	android:layout_width="150dp"
	    		android:layout_height="170dp"	    		
	    		>	    	
		    <ImageButton 
	   		android:id="@+id/mb_music_img" 	
	    	android:layout_width="150dp"
	    	android:layout_height="140dp"	    	
	    	android:src="@drawable/select_icon_music_unfocus"
	    	android:scaleType="fitCenter"
	    	android:background="@drawable/btn_bk"/>
		    <TextView 
		    android:layout_marginLeft="0dp"
		    android:layout_marginTop="132dp"
	    	android:layout_width="fill_parent"
	    	android:layout_height="20dp"
	    	android:textColor="#000000"
	    	android:gravity="center"
	    	android:textSize="16dp"
	    	android:text="@string/title_music"/>
		</RelativeLayout>
		
		<RelativeLayout 
		    	android:layout_width="150dp"
	    		android:layout_height="170dp"	    		
	    		>	    	
		    <ImageButton 
	   		android:id="@+id/mb_videos_img"   	
	    	android:layout_width="150dp"
	    	android:layout_height="140dp"	    	
	    	android:src="@drawable/select_icon_video_unfocus"
	    	android:scaleType="fitCenter"
	    	android:background="@drawable/btn_bk"/>
		    <TextView 
		    android:layout_marginLeft="0dp"
		    android:layout_marginTop="132dp"
	    	android:layout_width="fill_parent"
	    	android:layout_height="20dp"
	    	android:textColor="#000000"
	    	android:gravity="center"
	    	android:textSize="16dp"
	    	android:text="@string/title_movie"/>
		</RelativeLayout>
		
		<RelativeLayout 
		    	android:layout_width="150dp"
	    		android:layout_height="170dp"	    		
	    		>	    	
		    <ImageButton 
	   		android:id="@+id/mb_setting_img" 	
	    	android:layout_width="150dp"
	    	android:layout_height="140dp"	    	
	    	android:src="@drawable/select_icon_setting_unfocus"
	    	android:scaleType="fitCenter"
	    	android:background="@drawable/btn_bk"/>
		    <TextView 
		    android:layout_marginLeft="0dp"
		    android:layout_marginTop="132dp"
	    	android:layout_width="fill_parent"
	    	android:layout_height="20dp"
	    	android:textColor="#000000"
	    	android:gravity="center"
	    	android:textSize="16dp"
	    	android:text="@string/title_setup"/>
		</RelativeLayout>		
		
	</LinearLayout> 
	
    <ImageView
        android:id="@+id/mb_focus"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="185dp"
        android:scaleType="fitCenter"
        android:src="@drawable/select_icon_focus" />

    <RelativeLayout
	            android:id="@+id/mb_guide_bar"
	            android:layout_width="960dp"
	            android:layout_height="34.5dp"
	            android:layout_marginLeft="0dp"
	            android:layout_marginTop="505.5dp"
	            android:background="@drawable/list_common_bg_bottom">
			<RelativeLayout
		            android:id="@+id/guide_left"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="394.5dp"
	            	android:layout_marginTop="6.75dp">
		    		<TextView
			            android:id="@+id/mb_guide_ok"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:background="@drawable/hint_black"
			            android:gravity="center"
			            android:paddingLeft = "4dp"
	                	android:paddingRight = "4dp"
			            android:text="@string/guide_ok"
			            android:textColor="@color/white" 
			            android:textSize="15sp"/>
		    		<TextView
			            android:id="@+id/mb_guide_enter"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="15sp"
			            android:layout_marginLeft="2dp"
			            android:layout_toRightOf="@+id/mb_guide_ok"
			            android:gravity="center"
			            android:textColor="#4A4A4A"
			            android:text="@string/guide_enter" />
		    </RelativeLayout>
		    <RelativeLayout
		            android:id="@+id/guide_right"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="21dp"
		            android:layout_toRightOf="@id/guide_left" >
		    		<TextView
			            android:id="@+id/mb_guide_quick"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:background="@drawable/hint_black"
			            android:gravity="center"
			            android:paddingLeft = "4dp"
	                	android:paddingRight = "4dp"
	                	android:textSize="15sp"
			            android:text="@string/guide_quick"
			            android:textColor="@color/white" />
		    		<TextView
			            android:id="@+id/mb_guide_features"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_toRightOf="@+id/mb_guide_quick"
			            android:layout_marginLeft="2dp"
			            android:gravity="center"
			            android:textColor="#4A4A4A"
			            android:textSize="15sp"
			            android:text="@string/guide_features" />
		    </RelativeLayout>
	        
	    </RelativeLayout>

</RelativeLayout>
