<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mquick_menu_bg" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtmenu"
            android:layout_width="112.5dip"
            android:layout_height="15dip"
            android:layout_marginLeft="37.5dp"
            android:layout_marginTop="7.5dp"
            android:gravity="left|center_vertical"
            android:text="@string/quickmenu"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtmenu" >

            <RelativeLayout
                android:id="@+id/re_sound"
                android:layout_width="315dp"
                android:layout_height="30dp" >

                <TextView
                    android:id="@+id/txtSound"
                    android:layout_width="112.5dip"
                    android:layout_height="30dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="37.5dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/txtSound"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <SeekBar
                    android:id="@+id/sound_bar"
                    android:layout_width="150dp"
                    android:layout_height="9dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="157.5dp"
                    android:progressDrawable="@drawable/seekbar_style"
                    android:thumb="@android:drawable/ic_notification_overlay" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_repeat"
                android:layout_width="315dp"
                android:layout_height="30dp"
                android:layout_below="@+id/re_sound" >

                <TextView
                    android:id="@+id/txtRepeat"
                    android:layout_width="112.5dip"
                    android:layout_height="30dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="37.5dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/txtRepeat"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/menu_repeat"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="210dp"
                    android:background="#00000000" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_sleep"
                android:layout_width="315dp"
                android:layout_height="30dp"
                android:layout_below="@+id/re_repeat" >

                <TextView
                    android:id="@+id/txtSleep"
                    android:layout_width="112.5dip"
                    android:layout_height="30dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="37.5dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/txtSleep"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/menu_sleep"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="157.5dp"
                    android:background="#00000000"
                    android:gravity="left|center_vertical" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_tvap"
                android:layout_width="315dp"
                android:layout_height="30dp"
                android:layout_below="@+id/re_sleep" >

                <Button
                    android:id="@+id/btn_tvap"
                    android:layout_width="112.5dip"
                    android:layout_height="30dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="37.5dp"
                    android:background="#00000000"
                    android:gravity="left|center_vertical"
                    android:text="@string/tv_application" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_setting"
                android:layout_width="315dp"
                android:layout_height="30dp"
                android:layout_below="@+id/re_tvap" >

                <Button
                    android:id="@+id/btn_setting"
                    android:layout_width="112.5dip"
                    android:layout_height="30dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="37.5dp"
                    android:background="#00000000"
                    android:gravity="left|center_vertical"
                    android:text="@string/sys_setting" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>