<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     
    <ImageView android:id="@+id/message_bg" 
         android:layout_width="match_parent" 
         android:layout_height="150dp"
         android:layout_alignParentLeft="true"
	     android:layout_alignParentTop="true"
         android:background="@drawable/message_box_bg" />
	<RelativeLayout
	    android:id="@+id/confirm_bt"
	    android:layout_width="172.5dp"
	    android:layout_height="26.25dp"
	    android:layout_centerHorizontal="true"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="15.75dp"
	    >
	    
	    <Button
	      	android:id="@+id/comfirm_yes"
	        android:layout_width="60dp"
	        android:layout_height="match_parent"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="0dp"
	        android:gravity="center"
	        android:focusableInTouchMode="true"
	        android:textSize="11.25sp"
	        android:textColor="@drawable/tsb_button_text_selector"
	        android:text="@string/msg_yes"
	        android:background="@drawable/tsb_button_bk_selector" />
	    
	    <Button
	      	android:id="@+id/comfirm_no"
	        android:layout_width="60dp"
	        android:layout_height="match_parent"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@+id/comfirm_yes"
	        android:layout_marginLeft="52.5dp"
	        android:gravity="center"
	        android:focusableInTouchMode="true"
	        android:textSize="11.25sp"
	        android:textColor="@drawable/tsb_button_text_selector"
	        android:text="@string/msg_no"
	        android:background="@drawable/tsb_button_bk_selector" />
	
	</RelativeLayout>
	
	<TextView
	    android:id="@+id/message"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_above="@+id/confirm_bt"
	    android:layout_marginBottom="7.5dp"
	    android:paddingLeft = "15dp"
	    android:paddingRight = "15dp"
	    android:textColor="#10265f"
	    android:textSize="13.5sp"
	    android:gravity="left"
    />
    
 </RelativeLayout>