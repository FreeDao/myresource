<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_common_bg"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/bg_bottom"
            android:layout_width="1280dp"
            android:layout_height="46dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="674dp"
            android:background="@drawable/list_common_bg_bottom"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/audio_image"
            android:layout_width="300dp"
            android:layout_height="170dp"
            android:layout_marginLeft="870dp"
            android:layout_marginTop="203dp"
            android:scaleType="fitCenter" />
        <ProgressBar
            android:id="@+id/loadingIcon"
			style="@android:attr/progressBarStyleSmall"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="1206dp"
            android:layout_marginTop="49dp"
            android:background="#00000000"
            android:indeterminateDrawable="@anim/video_anim" />
        <TextView
            android:id="@+id/audio_artist"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="870dp"
            android:layout_marginTop="401dp"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/audio_album"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/audio_artist"
            android:layout_marginLeft="870dp"
            android:layout_marginTop="27dp"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="18sp" />
       <ProgressBar
            android:id="@+id/audio_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="8dp"
            android:layout_marginLeft="870dp"
            android:layout_marginTop="187dp"
            android:progressDrawable="@drawable/listprocess" />
        <TextView
            android:id="@+id/audio_hasplayed"
            android:layout_width="113dp"
            android:layout_height="16.5dp"
            android:layout_marginLeft="870dp"
            android:layout_marginTop="167dp"
            android:textColor="@color/white"
            android:textSize="13dp" />
        <ImageView
            android:id="@+id/page_up"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="788dp"
            android:layout_marginTop="145dp"
            android:scaleType="fitCenter"
            android:src="@drawable/list_common_icon_up" />
        <ImageView
            android:id="@+id/page_down"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="788dp"
            android:layout_marginTop="651dp"
            android:scaleType="fitCenter"
            android:src="@drawable/list_common_icon_down" />
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="71dp"
            android:layout_marginTop="32dp"
            android:background="#00000000"
            android:src="@drawable/music_list_icon_music" />
        <ImageView
            android:id="@+id/imgPath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="84dp"
            android:layout_marginTop="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/list_common_icon_folder" />

        <TextView
            android:id="@+id/textView1"
            android:layout_toRightOf="@+id/imageView1"
        	android:layout_alignTop="@+id/imageView1"
        	android:layout_marginTop="13dp"
        	android:layout_marginLeft="3dp"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:singleLine="true"
        	android:textColor="@color/white"
       	 	android:textSize="27sp" 
            android:text="@string/title_music" />

        <TextView
            android:id="@+id/music_path_top"
            android:layout_width="480dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="128dp"
            android:layout_marginTop="118dp"
            android:ellipsize="end"
            android:shadowColor="#aaaaaa"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totaltxt"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginLeft="581dp"
            android:layout_marginTop="118dp"
            android:gravity="right"
            android:shadowColor="#aaaaaa"
            android:singleLine="true"
            android:text="@string/totaltime"
            android:textColor="@color/white"
            android:textSize="20sp" />     
        <TextView
            android:id="@+id/audio_duration_tag"
            android:layout_width="16.5dp"
            android:layout_height="16.5dp"
            android:layout_marginLeft="870dp"
            android:layout_marginTop="167dp"
            android:gravity="center"
            android:text="@string/gapline"
            android:textColor="@color/white"
            android:textSize="13dp" />
        <TextView
            android:id="@+id/audio_duration"
            android:layout_width="114dp"
            android:layout_height="16.5dp"
            android:layout_marginLeft="927dp"
            android:layout_marginTop="167dp"
            android:textColor="@color/white"
            android:textSize="13dp" />
        <ImageButton
            android:id="@+id/imgRepeat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="760dp"
            android:layout_marginTop="153dp"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/av_repeat_icon" />

        <TextView
            android:id="@+id/TopIndexInfo_audio"
            android:layout_width="101.33dp"
            android:layout_height="26.67dp"
            android:layout_marginLeft="1140dp"
            android:layout_marginTop="105dp"
            android:gravity="left|center_vertical"
            android:shadowColor="#aaaaaa"
            android:textColor="@color/white"
            android:textSize="20dp" />

	    <RelativeLayout
	            android:id="@+id/bg_bottom"
	            android:layout_width="1280dp"
	            android:layout_height="46dp"
	            android:layout_marginLeft="0dp"
	            android:layout_marginTop="687dp"
	            android:background="@drawable/list_common_bg_bottom">

	        <RelativeLayout
	            android:id="@+id/guide_center"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true" >

	            <TextView
	                android:id="@+id/guide_quick"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/hint_black"
	                android:gravity="center"
	                android:paddingLeft = "5dp"
	                android:paddingRight = "5dp"
	                android:text="@string/guide_quick"
	                android:textColor="@color/white"
	                android:textSize="20sp" />

	            <TextView
	                android:id="@+id/guide_features"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="8dp"
	                android:layout_toRightOf="@id/guide_quick"
	                android:gravity="center"
	                android:text="@string/guide_features"
	                android:textColor="#4A4A4A"
	                android:textSize="20sp" />

	        </RelativeLayout>

	        <RelativeLayout
	            android:id="@+id/guide_left"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="28dp"
	            android:layout_toLeftOf="@id/guide_center" >

	            <TextView
	                android:id="@+id/guide_ok"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:paddingLeft = "5dp"
	                android:paddingRight = "5dp"
	                android:background="@drawable/hint_black"
	                android:gravity="center"
	                android:text="@string/guide_ok"
	                android:textColor="@color/white"
	                android:textSize="20sp" />

	            <TextView
	                android:id="@+id/guide_enter"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="8dp"
	                android:layout_toRightOf="@id/guide_ok"
	                android:gravity="center"
	                android:text="@string/guide_enter"
	                android:textColor="#4A4A4A"
	                android:textSize="20sp" />

	        </RelativeLayout>

	        <RelativeLayout
	            android:id="@+id/guide_right"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="28dp"
	            android:layout_toRightOf="@id/guide_center" >

	            <TextView
	                android:id="@+id/guide_p"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:paddingLeft = "5dp"
	                android:paddingRight = "5dp"
	                android:background="@drawable/hint_black"
	                android:gravity="center"
	                android:text="@string/guide_p"
	                android:textColor="@color/white"
	                android:textSize="20sp" />

	            <TextView
	                android:id="@+id/guide_page"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="8dp"
	                android:layout_toRightOf="@id/guide_p"
	                android:gravity="center"
	                android:text="@string/guide_page"
	                android:textColor="#4A4A4A"
	                android:textSize="20sp" />

	        </RelativeLayout>

	    </RelativeLayout>
        <ImageView
            android:id="@+id/audio_list_icon_line"
            android:layout_width="680dp"
            android:layout_height="0.67dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="153dp"
            android:src="@drawable/list_common_icon_line" 
            android:visibility="invisible"/>
	    <ListView
	        android:id="@+id/audio_list"
	        android:layout_width="670dp"
	        android:layout_height="552dp"
	        android:layout_alignLeft="@+id/audio_list_icon_line"
	        android:layout_alignTop="@+id/imgRepeat"
	        android:divider="@color/ListViewDivideLine"
	        android:dividerHeight="0.67dp"
	        android:focusable="true"
	        android:focusableInTouchMode="true"
	        android:listSelector="@drawable/selector_list_background"
	        android:scrollbars="none" >
	    </ListView>

    </RelativeLayout>
</LinearLayout>
