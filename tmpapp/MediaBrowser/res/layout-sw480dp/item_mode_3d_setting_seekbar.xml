<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/item_mode_3d_setting_seekbar_title"
        android:layout_width="88.0dp"
        android:layout_height="35.2dp"
        android:focusable="false"
        android:gravity="center_vertical|left"
        android:paddingLeft="8.8dp" >
    </TextView>

    <LinearLayout
        android:layout_width="272.8dp"
        android:layout_height="35.2dp"
        android:layout_marginLeft="17.6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <SeekBar
            android:id="@+id/item_mode_3d_setting_seekbar_seekbar"
            android:layout_width="237.6dp"
            android:layout_height="wrap_content"
            style="@android:style/Widget.Holo.SeekBar" >
        </SeekBar>

        <TextView
            android:id="@+id/item_mode_3d_setting_seekbar_num"
            android:layout_width="35.2dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="center_vertical|center_horizontal" >
        </TextView>
    </LinearLayout>

</LinearLayout>
