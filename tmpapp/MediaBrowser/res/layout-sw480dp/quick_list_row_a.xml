<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="17.2dp"
    android:orientation="horizontal">
	<TextView
	    android:id="@+id/menu_name"
	    android:layout_width="300px"
        android:layout_height="52px"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6.6dp"
        android:gravity="center_vertical|right"
	    android:text="@string/quickmenu"
	    android:textColor="@drawable/list_text_color" 
	    android:textSize="28px"
		/>
	
	<RelativeLayout 
	    android:id="@+id/item_right_rl"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:layout_width="400px"
        android:layout_height="match_parent"
        android:gravity="center"
	    >

		<ImageView
		    android:id="@+id/left_arrow"
		    android:layout_width="9.2dp"
	        android:layout_height="9.2dp"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="30px"
	        android:layout_marginTop="5.5dp"
		    android:src="@drawable/list_common_icon_left"
		    android:visibility="invisible" />
	
		<TextView
		    
		    android:id="@+id/menu_option"
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="3.5dp"
	        android:layout_centerVertical="true"
			android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
	        android:singleLine="true"
			android:textColor="@drawable/list_text_color" 
			android:textSize="28px"				
			/>
		
		<ImageView
		    android:id="@+id/right_arrow"
		    android:layout_width="9.2dp"
	        android:layout_height="9.2dp"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="30px"
	        android:layout_alignTop="@+id/left_arrow"
		    android:src="@drawable/list_common_icon_right"
		    android:visibility="invisible" />
	</RelativeLayout>
