<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     
    <ImageView android:id="@+id/message_bg" 
         android:layout_width="match_parent" 
         android:layout_height="132.0dp"
         android:layout_alignParentLeft="true"
	     android:layout_alignParentTop="true"
         android:background="@drawable/message_box_bg" />

	<RelativeLayout
	    android:id="@+id/confirm_bt"
	    android:layout_width="151.8dp"
	    android:layout_height="23.1dp"
	    android:layout_centerHorizontal="true"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="13.9dp"
	    >
	    
	    <ImageButton
	      	android:id="@+id/comfirm_bt_bg"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:gravity="center"
	        android:focusableInTouchMode="true"
	        android:background="@drawable/list_common_item_focus" />
	
	    <TextView
	        android:id="@+id/confirm_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:textSize="9.9sp"
	        android:textColor="@color/white"
	        android:text="@string/msg_yes" />
	
	    <ImageView
	        android:id="@+id/confirm_left"
	        android:layout_width="7.9dp"
			android:layout_height="7.9dp"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="5.3dp"
	        android:src="@drawable/list_common_icon_left" />
	
	    <ImageView
	        android:id="@+id/confirm_right"
	        android:layout_width="7.9dp"
			android:layout_height="7.9dp"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="5.3dp"
	        android:src="@drawable/list_common_icon_right" />
	
	</RelativeLayout>
	
	<TextView
	    android:id="@+id/message"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_above="@+id/confirm_bt"
	    android:layout_marginBottom="6.6dp"
	    android:paddingLeft = "13.2dp"
	    android:paddingRight = "13.2dp"
	    android:textColor="#10265f"
	    android:textSize="11.9sp"
	    android:gravity="left"
    />

	<TextView
	    android:id="@+id/confirm_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginLeft="6.6dp"
	    android:layout_marginTop="1.3dp"
	    android:textSize="11.9sp"
	    android:textColor="#0f265f"
	     />
    
 </RelativeLayout>
