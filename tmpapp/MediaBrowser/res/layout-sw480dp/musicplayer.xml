<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/music_fullscreen_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/musicTitle"
            android:layout_width="316.8dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="304.5dip"
            android:layout_marginTop="114dip"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="13.2sp" />

        <TextView
            android:id="@+id/musicArtist"
            android:layout_width="360dip"
            android:layout_height="wrap_content"
            android:layout_below="@id/musicTitle"
            android:layout_marginLeft="304.5dip"
            android:layout_marginTop="5.3dp"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="13.2sp" />

        <TextView
            android:id="@+id/txt_repeat"
            android:layout_width="426.75dip"
            android:layout_height="15dip"
            android:layout_marginLeft="315dip"
            android:layout_marginTop="175.5dip"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textColor="@color/musicTitle"
            android:textSize="10.6sp"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/lay_spectrum"
            android:layout_width="364.5dip"
            android:layout_height="126dip"
            android:layout_marginLeft="301.5dip"
            android:layout_marginTop="195dip"
            android:visibility="visible" >

            <com.realtek.Utils.SpectrumView
                android:id="@+id/spectrum"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </com.realtek.Utils.SpectrumView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_text"
            android:layout_width="364.5dip"
            android:layout_height="120dip"
            android:layout_marginLeft="301.5dip"
            android:layout_marginTop="322.5dip"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="20.2dp"
                android:layout_height="17.2dp"
                android:layout_marginLeft=".4dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="7.9dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="20.2dp"
                android:layout_height="17.2dp"
                android:layout_marginLeft="149.2dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="7.9dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="20.2dp"
                android:layout_height="17.2dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="1.8dp"
                android:gravity="left|center_vertical"
                android:textColor="#ffffff"
                android:textSize="7.9dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="17.2dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18.5dp"
                android:gravity="center"
                android:text="@string/spectrum_unit"
                android:textColor="#ffffff"
                android:textSize="10.6dp"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_gui"
            android:layout_width="match_parent"
            android:layout_height="97.5dip"
            android:layout_marginLeft="0dip"
            android:layout_marginTop="387dip"
            android:visibility="invisible" >

            <ImageButton
                android:id="@+id/gui_last"
                android:layout_width="83.8dp"
                android:layout_height="76.6dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="205.9dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/gui_last" />
            <ImageButton
                android:id="@+id/gui_rw"
                android:layout_width="83.8dp"
                android:layout_height="76.6dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="293.0dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/gui_rw" />
            <ImageButton
                android:id="@+id/gui_play"
                android:layout_width="83.8dp"
                android:layout_height="76.6dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="380.2dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/gui_play" />
            <ImageButton
                android:id="@+id/gui_fw"
                android:layout_width="83.8dp"
                android:layout_height="76.6dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="467.3dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/gui_fw" />
           <ImageButton
                android:id="@+id/gui_next"
                android:layout_width="83.8dp"
                android:layout_height="76.6dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="554.4dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/gui_next" />
            <ImageButton
                android:id="@+id/gui_repeat"
                android:layout_width="83.8dp"
                android:layout_height="76.6dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="664.0dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/gui_repeat" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/lay_banner"
            android:layout_width="match_parent"
            android:layout_height="37.5dip"
            android:layout_marginLeft="0dip"
            android:layout_marginTop="502.5dip"
            android:background="@drawable/photo_banner" >

            <TextView
                android:id="@+id/musicNumber"
                android:layout_width="75dip"
                android:layout_height="18dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="101.6dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="10.6sp" />

            <ImageView
                android:id="@+id/imgSta"
                android:layout_width="47.5dp"
                android:layout_height="14.5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="161.0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/au_play" />

            <ProgressBar
                android:id="@+id/playBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="351dip"
                android:layout_height="10.5dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="212.5dp"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/myprocess" />

            <TextView
                android:id="@+id/timeNow"
                android:layout_width="142.5dip"
                android:layout_height="24dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="537.2dp"
                android:gravity="center"
                android:text="@string/stime"
                android:textColor="@color/white"
                android:textSize="10.6sp" />

            <ImageButton
                android:id="@+id/btn_repeat"
                android:layout_width="22.5dip"
                android:layout_height="22.5dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="693.0dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/photo_repeat_all_off" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_quick"
            android:layout_width="500dip"
            android:layout_height="300dip"
            android:layout_marginLeft="100dip"
            android:layout_marginTop="380dip"
            android:background="@color/black"
            android:visibility="gone" >

            <TextView
                android:id="@+id/txtSound"
                android:layout_width="200dip"
                android:layout_height="50dip"
                android:layout_marginLeft="44.0dp"
                android:layout_marginTop="8.8dp"
                android:gravity="left|center_vertical"
                android:text="@string/txtSound"
                android:textColor="@color/timecolor"
                android:textSize="14.1sp" />

            <TextView
                android:id="@+id/txtRepeat"
                android:layout_width="200dip"
                android:layout_height="50dip"
                android:layout_marginLeft="44.0dp"
                android:layout_marginTop="52.8dp"
                android:gravity="left|center_vertical"
                android:text="@string/txtRepeat"
                android:textColor="@color/timecolor"
                android:textSize="14.1sp" />

            <TextView
                android:id="@+id/txtSleep"
                android:layout_width="200dip"
                android:layout_height="50dip"
                android:layout_marginLeft="44.0dp"
                android:layout_marginTop="96.8dp"
                android:gravity="left|center_vertical"
                android:text="@string/txtSleep"
                android:textColor="@color/timecolor"
                android:textSize="14.1sp" />

            <TextView
                android:id="@+id/txtDevice"
                android:layout_width="200dip"
                android:layout_height="50dip"
                android:layout_marginLeft="44.0dp"
                android:layout_marginTop="140.8dp"
                android:gravity="left|center_vertical"
                android:text="@string/txtDevice"
                android:textColor="@color/timecolor"
                android:textSize="14.1sp"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
