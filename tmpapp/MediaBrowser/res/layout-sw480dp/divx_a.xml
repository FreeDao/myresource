<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RtkAtvView
        android:id="@+id/divx_atv_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="31.0dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/list_common_bg_bottom" >

        <RelativeLayout
            android:id="@+id/guide_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="347.6dp" >

            <TextView
                android:id="@+id/divx_guide_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/guide_enter"
                android:textColor="#0f265f"
                android:textSize="13.2sp" />

            <TextView
                android:id="@+id/divx_guide_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.3dp"
                android:layout_toRightOf="@id/divx_guide_enter"
                android:background="@drawable/guide_icon_bg"
                android:gravity="center"
                android:paddingLeft="3.5dp"
                android:paddingRight="3.5dp"
                android:text="@string/guide_ok"
                android:textColor="@color/white"
                android:textSize="13.2sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/guide_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18.5dp"
            android:layout_toRightOf="@id/guide_left" >

            <TextView
                android:id="@+id/divx_guide_select"
                android:layout_width="wrap_content"
                android:layout_height="18.5dp"
                android:gravity="center"
                android:text="@string/guide_select"
                android:textColor="#0f265f" />

            <TextView
                android:id="@+id/divx_guide_arrows"
                android:layout_width="30.4dp"
                android:layout_height="18.5dp"
                android:layout_marginLeft="5.3dp"
                android:layout_toRightOf="@id/divx_guide_select"
                android:background="@drawable/guide_csl_rl"
                android:gravity="center"
                android:paddingLeft="3.5dp"
                android:paddingRight="3.5dp" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/registerChoice_bg"
        android:layout_width="297.0dp"
        android:layout_height="88.0dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true"
        android:background="@drawable/quick_menu_bg" />

    <ImageView
        android:id="@+id/focus"
        android:layout_width="297.0dp"
        android:layout_height="29.9dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/list_common_item_focus"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/registerChoice"
        android:layout_width="297.0dp"
        android:layout_height="88.0dp"
        android:layout_centerInParent="true"
        android:visibility="visible" >

        <TextView
            android:id="@+id/title_registerChoice"
            android:layout_width="250.8dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="right"
            android:paddingRight="6.6dp"
            android:paddingTop="1.3dp"
            android:singleLine="true"
            android:textColor="#0f265f"
            android:textSize="13.2sp" />

        <ListView
            android:id="@+id/menu_list"
            android:layout_width="297.0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/title_registerChoice"
            android:layout_marginLeft=".7dp"
            android:layout_marginTop=".7dp"
            android:divider="@color/quickMenuLine"
            android:dividerHeight=".3dp"
            android:listSelector="@drawable/selector_list_background" />

        <TextView
            android:id="@+id/divider"
            android:layout_width="297.0dp"
            android:layout_height=".3dp"
            android:layout_below="@+id/menu_list"
            android:background="@color/quickMenuLine" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clues_relativelayout"
        android:layout_width="298.3dp"
        android:layout_height="176.0dp"
        android:layout_centerInParent="true"
        android:visibility="invisible" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/quick_menu_bg" />

        <TextView
            android:id="@+id/title_clue"
            android:layout_width="297.0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:paddingLeft="6.6dp"
            android:paddingTop="1.3dp"
            android:singleLine="true"
            android:textColor="#0f265f"
            android:textSize="11.9sp" />

        <RelativeLayout
            android:id="@+id/bt_single"
            android:layout_width="151.8dp"
            android:layout_height="23.1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13.9dp" >
            <Button
                android:id="@+id/option"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/list_common_item_focus"
                android:focusableInTouchMode="true"
                android:paddingBottom="4.4dp"
                android:paddingTop="4.4dp"
                android:textColor="@color/white"
                android:text="@string/guide_ok"
                android:textSize="9.9sp" >
                <requestFocus/>
             </Button>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bt_yes_no"
            android:layout_width="151.8dp"
            android:layout_height="23.1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13.9dp"
            android:visibility="invisible" >

            <Button
                android:id="@+id/bt_yes"
                android:layout_width="52.8dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="0dp"
                android:background="@drawable/tsb_button_bk_selector"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/msg_yes"
                android:textColor="@drawable/tsb_button_text_selector"
                android:textSize="9.9sp" >
                <requestFocus/>
            </Button>

            <Button
                android:id="@+id/bt_no"
                android:layout_width="52.8dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="46.2dp"
                android:layout_toRightOf="@+id/bt_yes"
                android:background="@drawable/tsb_button_bk_selector"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:text="@string/msg_no"
                android:textColor="@drawable/tsb_button_text_selector"
                android:textSize="9.9sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/clues_linearlayout"
            android:layout_width="495.0dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bt_single"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6.6dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/clue1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="#10265f"
                android:textSize="11.9sp" />

            <TextView
                android:id="@+id/clue2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="#10265f"
                android:textSize="11.9sp" />

            <TextView
                android:id="@+id/clue3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="#10265f"
                android:textSize="11.9sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
