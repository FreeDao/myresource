<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/music_fullscreen_bg"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/musicTitle"
        android:layout_width="960dp"
        android:layout_height="48dip"
        android:layout_marginLeft="812dip"
        android:layout_marginTop="304dip"
        android:ellipsize="end"
        android:gravity="center_vertical|left"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/musicArtist"
        android:layout_width="960dip"
        android:layout_height="48dip"
        android:layout_marginLeft="812dip"
        android:layout_marginTop="364dip"
        android:ellipsize="end"
        android:gravity="center_vertical|left"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/txt_repeat"
        android:layout_width="1138dip"
        android:layout_height="40dip"
        android:layout_marginLeft="840dip"
        android:layout_marginTop="468dip"
        android:ellipsize="end"
        android:gravity="center_vertical|left"
        android:singleLine="true"
        android:textColor="@color/musicTitle"
        android:textSize="32sp"
        android:visibility="invisible" />
    <RelativeLayout
        android:id="@+id/lay_spectrum"
        android:layout_width="972dip"
        android:layout_height="336dip"
        android:layout_marginLeft="804dip"
        android:layout_marginTop="520dip"
        android:visibility="visible" >
        <com.realtek.Utils.SpectrumView
            android:id="@+id/spectrum"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >           
        </com.realtek.Utils.SpectrumView>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/lay_text"
        android:layout_width="972dip"
        android:layout_height="320dip"
        android:layout_marginLeft="804dip"
        android:layout_marginTop="860dip"
        android:visibility="visible" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_marginLeft="180dp"
            android:gravity="left|center_vertical"
            android:text="@string/digital_100"
            android:textColor="#ffffff"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_marginLeft="448dp"
            android:gravity="left|center_vertical"
            android:text="@string/digital_1k"
            android:textColor="#ffffff"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_marginLeft="700dp"
            android:gravity="left|center_vertical"
            android:text="@string/digital_10k"
            android:textColor="#ffffff"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="56dp"
            android:gravity="center"
            android:text="@string/spectrum_unit"
            android:textColor="#ffffff"
            android:textSize="32dp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lay_banner"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_marginLeft="0dip"
        android:layout_marginTop="1340dip" >
        <TextView
            android:id="@+id/musicNumber"
            android:layout_width="200dip"
            android:layout_height="48dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="308dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="32sp" />
        <ImageView
            android:id="@+id/imgSta"
            android:layout_width="144dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="488dp"
            android:scaleType="fitCenter"
            android:src="@drawable/au_play" />
        <ProgressBar
            android:id="@+id/playBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="936dip"
            android:layout_height="28dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="644dp"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/myprocess" />

        <TextView
            android:id="@+id/timeNow"
            android:layout_width="380dip"
            android:layout_height="64dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1628dp"
            android:gravity="center"
            android:text="@string/stime"
            android:textColor="@color/black"
            android:textSize="32sp" />
    <ImageButton
        android:id="@+id/btn_repeat"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2100dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/photo_repeat_all_off" />

</RelativeLayout>
    <RelativeLayout
        android:id="@+id/lay_quick"
        android:layout_width="1000dip"
        android:layout_height="600dip"
        android:layout_marginLeft="200dip"
        android:layout_marginTop="760dip"
        android:background="@color/black"
        android:visibility="gone" >
        <TextView
            android:id="@+id/txtSound"
            android:layout_width="400dip"
            android:layout_height="100dip"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:gravity="left|center_vertical"
            android:text="@string/txtSound"
            android:textColor="@color/timecolor"
            android:textSize="32sp" />
        <TextView
            android:id="@+id/txtRepeat"
            android:layout_width="400dip"
            android:layout_height="100dip"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="120dp"
            android:gravity="left|center_vertical"
            android:text="@string/txtRepeat"
            android:textColor="@color/timecolor"
            android:textSize="32sp" />
        <TextView
            android:id="@+id/txtSleep"
            android:layout_width="400dip"
            android:layout_height="100dip"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="220dp"
            android:gravity="left|center_vertical"
            android:text="@string/txtSleep"
            android:textColor="@color/timecolor"
            android:textSize="32sp" />
        <TextView
            android:id="@+id/txtDevice"
            android:layout_width="400dip"
            android:layout_height="100dip"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="320dp"
            android:gravity="left|center_vertical"
            android:text="@string/txtDevice"
            android:textColor="@color/timecolor"
            android:textSize="32sp"
            android:visibility="gone" />
    </RelativeLayout>
</AbsoluteLayout>